#include "stdafx.h"
#include <cstdlib>
#include <iostream>



using namespace std;

int main()
{
	int choice,months;


	do {
		cout <<"1 adult gym\n"; 
		cout <<"2 kid gym\n";
		cout <<"3 seinor citizen gym\n";
		cout <<"4 exit the menu\n";
		cout <<" please enter a number from the menu\n";
		cin >> choice;
		cout <<"please enter how many month you want to join\n";
		cin >> months;
		cout <<"\n";


		switch (choice)
		{
		case 1: cout << "adult gym";
			cout << "the total fees is:" << months*50 <<"\n" ;
			break;
		case 2:cout << "kid gym";
			cout << "the total fees is:" << months*30<<"\n";
			break;
		case 3:cout << "seinor citizen gym";
			cout << "the total fees is:" << months*20<<"\n";
			break;
		case 4:cout << " exit the menu";
			break;
		default: cout << "please enter a number from the menu";
		}
	}

	while (choice != 4);
	return 0;
}
